{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "pretty": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "styles/*": ["./src/styles/*"],
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "lib": [
      "dom", "es2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jquery",
      "webpack-env",
      "react",
      "react-dom",
      "prop-types",
      "classnames"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
